{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "es6",
    "rootDir": "./src",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "src/**/*.ts"
  ]
}